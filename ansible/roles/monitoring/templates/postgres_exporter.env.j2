# PostgreSQL connection string
DATA_SOURCE_NAME=postgresql://postgres_exporter:{{ postgres_exporter_password | default('change_this_password') }}@localhost:5432/postgres?sslmode=disable

# Exporter configuration
PG_EXPORTER_WEB_LISTEN_ADDRESS=:9187
PG_EXPORTER_WEB_TELEMETRY_PATH=/metrics

# Extend query timeout (default: 5s)
PG_EXPORTER_QUERY_TIMEOUT=10

# Custom queries file (optional)
# PG_EXPORTER_EXTEND_QUERY_PATH=/etc/postgres_exporter/queries.yaml

# Disable default metrics (optional)
# PG_EXPORTER_DISABLE_DEFAULT_METRICS=false

# Auto discover databases
PG_EXPORTER_AUTO_DISCOVER_DATABASES=true

# Exclude specific databases (comma-separated)
PG_EXPORTER_EXCLUDE_DATABASES=template0,template1