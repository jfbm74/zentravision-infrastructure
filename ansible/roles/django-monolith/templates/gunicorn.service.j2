[Unit]
Description=Zentravision Gunicorn daemon
After=network.target

[Service]
User={{ app_user }}
Group={{ app_user }}
WorkingDirectory={{ app_home }}/app
ExecStart={{ app_home }}/venv/bin/gunicorn --workers {{ gunicorn_workers | default(2) }} --bind 127.0.0.1:8000 {{ app_name }}.wsgi:application
Restart=always
RestartSec=3
Environment=PATH={{ app_home }}/venv/bin

[Install]
WantedBy=multi-user.target
