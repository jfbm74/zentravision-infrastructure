{
  "dashboard": {
    "id": null,
    "uid": "zentravision-basic",
    "title": "Zentravision - Basic Monitoring",
    "description": "Dashboard b√°sico para monitoreo de Zentravision",
    "tags": ["zentravision", "basic", "dev"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "üö¶ Application Status",
        "type": "stat",
        "targets": [
          {
            "expr": "zentravision_up",
            "legendFormat": "Zentravision App"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "DOWN",
                    "color": "red"
                  }
                },
                "type": "value"
              },
              {
                "options": {
                  "1": {
                    "text": "UP",
                    "color": "green"
                  }
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "üíª System CPU Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "zentravision_cpu_usage",
            "legendFormat": "CPU Usage %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "üíæ Memory Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "zentravision_memory_usage_percent",
            "legendFormat": "Memory Usage %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "üíΩ Disk Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "zentravision_disk_usage_percent",
            "legendFormat": "Disk Usage %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "üêò Database Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "zentravision_db_connections_active",
            "legendFormat": "Active DB Connections"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 100}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "üìà System Load (if available)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "node_load1{job=\"node\"}",
            "legendFormat": "1m load"
          },
          {
            "expr": "node_load5{job=\"node\"}",
            "legendFormat": "5m load"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ],
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    }
  }
}
